<CustNumButton@Button>:
    font_size: 72

<ECO>
    Inicio:
    PadNumerico:
    Informacion:

<Inicio>:
    name: "Inicio"
    canvas:
        Color:
            rgb: [1,1,1]
        Rectangle:
            size: self.size
            pos: self.pos

    FloatLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint: 1,None
            height: self.width*0.6
            pos_hint: {'y':0.55}
            canvas:
                Color:
                    rgb: [1,1,1]
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "Media/logo.png"
        Label:
            size_hint: 1,0.5
            pos_hint:{'y':0.1}
            markup: True
            text: "[color=#000]"+root.TInstrucciones+"[/color]"
            font_size: 20
        Button:
            size_hint: 0.15,None
            height: self.width
            text: "Evento"
            on_press: root.manager.current = "PadNumerico"
        Button:
            size_hint: 0.15,None
            height: self.width
            pos_hint:{'x':0.83,'y':0.01}
            text: "Info"
            on_press: root.manager.current = "Informacion"

<PadNumerico>:
    name: "PadNumerico"
    canvas:
        Color:
            rgb: [0,0,0]
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation: 'vertical'
        Pad:

<Informacion>:
    name: "Informacion"
    FloatLayout:
        canvas:
            Color:
                rgb: [1,1,1]
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            markup: True
            text: "[color=#000]"+"Mucho Texto"+"[/color]"
        Button:
            background_normal: "Media/FB_Logo.png"
            border: [0,0,0,0]
            size_hint: 0.15 ,None
            height: self.width
            pos_hint: {'center_x':0.2,'y':0.2}

        Button:
            background_normal: "Media/YT_Logo.jpg"
            border: [0,0,0,0]
            size_hint: 0.15,None
            height: self.width
            pos_hint: {'center_x':0.5,'y':0.2}

        Button:
            background_normal: "Media/TW_Logo.png"
            border: [0,0,0,0]
            size_hint: 0.15,None
            height: self.width
            pos_hint: {'center_x':0.8,'y':0.2}

        Button:
            size_hint: 0.15,None
            height: self.width
            pos_hint:{'x':0.83,'y':0.01}
            text: "Inicio"
            on_press: root.manager.current = "Inicio"

<Pad>:
    orientation: 'vertical'
    padding: 15
    spacing: 10
    Label:
        size_hint: 1, 0.05
        text: 'Ingresar n√∫mero Celular'
        font_size: 36
    Label:
        canvas:
            Color:
                rgba: [1,1,1,0.3]
            Rectangle:
                size: self.size
                pos: self.pos
        id: Display
        size_hint: 1, 0.2
        text: ""
        color: [0,1,1,1]
        font_size: 86
    Numerico:
        id: Num
        contenedor: root
    Label:
        size_hint: 1, 0.05
        text:'Proyecto ECO'
        font_size: 42

<Numerico>:
    rows: 4
    cols: 3
    padding: 10,10,10,10
    spacing: 10
